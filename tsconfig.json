{
  "compilerOptions": {
    "target": "esnext",                  // Use the latest JavaScript features
    "lib": ["dom", "dom.iterable", "esnext"], 
    "allowJs": true,                    // Allow JavaScript files
    "skipLibCheck": true,               // Skip type checking for libraries
    "strict": true,                     // Enable strict type-checking options
    "noEmit": true,                     // Do not emit output files
    "esModuleInterop": true,            // Enable compatibility with CommonJS
    "module": "esnext",                 // Use ESNext module system
    "moduleResolution": "bundler",      // Support modern module resolution
    "resolveJsonModule": true,          // Enable importing JSON files
    "isolatedModules": true,            // Ensure each file is an isolated module
    "jsx": "preserve",                  // Preserve JSX syntax for Next.js
    "incremental": true,                // Enable incremental compilation for faster builds
    "baseUrl": ".",                     // Set the base URL for resolving paths
    "paths": {
      "@/*": ["./*"],                   // Alias for simplifying imports
      "@components/*": ["components/*"] // Add alias specifically for components
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
